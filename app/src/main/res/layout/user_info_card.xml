<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="horizontal">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_product_rvcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_border"
        android:padding="5dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp"
        app:strokeColor="#ECEBEB"
        app:strokeWidth="1dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="35dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="5dp"
                >

                <TextView
                    android:id="@+id/tv_selected_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Akshay Chavan"
                    android:textColor="@color/colorBlack"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Account Holder Name"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="11dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_current_balance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="$10,000.00"
                            android:textColor="#0D1E44"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Current Balance"
                            android:textColor="@color/colorLightGrey"
                            android:textSize="11dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_customer_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="BK0001"
                            android:textColor="#0D1E44"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Customer ID"
                            android:textColor="@color/colorLightGrey"
                            android:textSize="11dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="akshay.chavan@gmail.com"
                            android:textColor="#0D1E44"
                            android:textSize="13dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Email"
                            android:textColor="@color/colorLightGrey"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_todaysdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Value as of 01-Feb-2021"
                    android:textColor="@color/colorLightGrey"
                    android:textSize="11dp" />

            </LinearLayout>
            <ImageView
                android:layout_width="129dp"
                android:layout_height="144dp"
                android:layout_gravity="right"
                android:alpha="0.5"
                android:src="@drawable/portfolio_details" />
        </FrameLayout>
        <FrameLayout
            android:id="@+id/fm_transfer_amount"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:background="#F8F8F8"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer Amount"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                />
        </FrameLayout>

    </com.google.android.material.card.MaterialCardView>
</FrameLayout>






