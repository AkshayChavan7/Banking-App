<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_user_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_product_rvcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        android:layout_margin="5dp"
        app:strokeColor="#ECEBEB"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            >
            <View
                android:id="@+id/side_color"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/userlist_side_color"
                android:layout_weight="0.02"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:layout_weight="0.98"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_user_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:text="Akshay Chavan"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_account_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="BK0001"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/tv_balance_amount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:text="$100,000.00"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_user_name_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:text="Customer Name"
                            android:textColor="@color/colorLightGrey"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_account_no_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:text="Account No."
                            android:textColor="@color/colorLightGrey"
                            android:textSize="12dp" />
                        <TextView
                            android:id="@+id/tv_balance_amount_label"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.35"
                            android:text="Balance Amount"
                            android:textColor="@color/colorLightGrey"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_right_24"/>

                <!--        <androidx.cardview.widget.CardView-->
                <!--            android:visibility="gone"-->
                <!--            android:id="@+id/cv_calendar"-->
                <!--            android:layout_width="70dp"-->
                <!--            android:layout_height="40dp"-->
                <!--            android:layout_gravity="bottom"-->
                <!--            android:clickable="true"-->
                <!--            android:foreground="?attr/selectableItemBackgroundBorderless"-->
                <!--            app:cardBackgroundColor="#F6F6F6"-->
                <!--            app:cardCornerRadius="8dp"-->
                <!--            app:cardElevation="0dp"-->
                <!--            app:strokeColor="#680606"-->
                <!--            app:strokeWidth="1dp">-->
                <!--            <TextView-->
                <!--                android:layout_width="match_parent"-->
                <!--                android:layout_height="match_parent"-->
                <!--                android:text="View Details"-->
                <!--                android:textColor="#707073"-->
                <!--                android:textSize="14dp"-->
                <!--                android:gravity="center"-->
                <!--                />-->
                <!--        </androidx.cardview.widget.CardView>-->

            </LinearLayout>
        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>
    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ECEAEA" />

</LinearLayout>