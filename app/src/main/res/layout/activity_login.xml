<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_login_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_animation"
    tools:context=".LoginActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:layout_margin="20dp"
        app:cardBackgroundColor="#27FFFFFF"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TSF Bank"
                android:textColor="@color/colorOrange"
                android:fontFamily="@font/quantico"
                android:textSize="60dp"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:visibility="visible"
                android:drawableStart="@drawable/person_icon"
                android:drawablePadding="12dp"
                android:background="@drawable/custom_input_login"
                android:ems="10"
                android:textSize="18dp"
                android:textColor="#919191"
                android:hint="Name"
                android:textColorHint="#919191"
                />
            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:fontFamily="@font/roboto_condensed_regular"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="12dp"
                android:background="@drawable/custom_input_login"
                android:ems="10"
                android:textSize="18dp"
                android:textColor="#919191"
                android:hint="Email ID"
                android:textColorHint="#919191"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/signin"
                android:layout_width="200dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/colorOrange"
                android:fontFamily="@font/roboto_condensed_regular"
                android:text="Log In"
                app:cornerRadius="8dp"
                android:layout_gravity="center"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:weightSum="1"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="0.35"
                    android:layout_gravity="center"
                    android:background="#9DBFDA"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Login with"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:gravity="top"
                    android:layout_weight="0.3"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_weight="0.35"
                    android:background="#9DBFDA"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_google_login"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/google_logo"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackgroundBorderless"
                    />
                <FrameLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    >
                    <com.facebook.login.widget.LoginButton
                        android:visibility="visible"
                        android:id="@+id/login_button"
                        android:alpha="0"
                        android:background="@color/colorTransparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.497"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.799"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        />
                    <ImageView
                        android:id="@+id/iv_facebook_login"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/facebook_logo"
                        />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>