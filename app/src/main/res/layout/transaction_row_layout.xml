<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_calendar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:strokeColor="#ECEBEB"
            app:strokeWidth="1dp"
            android:layout_gravity="bottom"
            android:background="@drawable/card_border"
            app:cardBackgroundColor="#F8F8F8"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    />
                <TextView

                    android:id="@+id/tv_month_and_year"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nov'21"
                    android:gravity="center"
                    android:textSize="13dp"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="0.75"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_beneficiary_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:text="Akshay Chavan"
                        />
                    <TextView
                        android:id="@+id/tv_transaction_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:text="UPI-0123456789"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/tv_beneficiary_name_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGrey"
                        android:text="Beneficiary"
                        />
                    <TextView
                        android:id="@+id/tv_transaction_id_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorLightGrey"
                        android:text="Transaction ID"
                        />
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_tranferred_amount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="-1000"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="@color/colorRed"
                android:layout_weight="0.25"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#ECEAEA"/>

</LinearLayout>